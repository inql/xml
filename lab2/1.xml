  <!ELEMENT wlasciciel (#PCDATA)>
  <!ELEMENT grupa (#PCDATA)>
  <!ELEMENT pozostali (#PCDATA)>
]>
<!-- struktktura pliki -->
<pliki>
  <plik typ="f">
