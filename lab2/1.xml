  <!ATTLIST plik typ NMTOKEN #REQUIRED>
  <!ELEMENT nazwa (#PCDATA)>
  <!ELEMENT data_modyfikacji (dzien,miesiac,rok)>
  <!ELEMENT dzien (#PCDATA)>
  <!ELEMENT miesiac (#PCDATA)>
