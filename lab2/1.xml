      <wlasciciel></wlasciciel>
      <grupa></grupa>
      <pozostali></pozostali>
    </prawa_dostepu>
  </plik>
  <plik typ="a">
    <nazwa></nazwa>
    <data_modyfikacji>
      <dzien></dzien>
